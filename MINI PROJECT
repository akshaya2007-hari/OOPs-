import java.io.*;
import java.util.*;

public class AttendanceSystem {

    static Scanner sc = new Scanner(System.in);
    static String fileName = "attendance.txt";

    public static void main(String[] args) {
        int choice;
        do {
            System.out.println("\n--- Attendance Tracking System ---");
            System.out.println("1. Mark Attendance");
            System.out.println("2. View Attendance Report");
            System.out.println("3. Exit");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (choice) {
                case 1:
                    markAttendance();
                    break;
                case 2:
                    viewAttendance();
                    break;
                case 3:
                    System.out.println("Exiting... Thank you!");
                    break;
                default:
                    System.out.println("Invalid choice! Try again.");
            }
        } while (choice != 3);
    }

    // Function to mark attendance
    public static void markAttendance() {
        try {
            FileWriter fw = new FileWriter(fileName, true);
            BufferedWriter bw = new BufferedWriter(fw);

            System.out.print("Enter number of students: ");
            int n = sc.nextInt();
            sc.nextLine(); // consume newline

            for (int i = 1; i <= n; i++) {
                System.out.print("Enter student name: ");
                String name = sc.nextLine();
                System.out.print("Present (P) / Absent (A): ");
                String status = sc.nextLine().toUpperCase();

                bw.write(name + " - " + (status.equals("P") ? "Present" : "Absent"));
                bw.newLine();
            }

            bw.close();
            System.out.println("Attendance recorded successfully!");
        } catch (IOException e) {
            System.out.println("Error while writing to file.");
        }
    }

    // Function to view attendance report
    public static void viewAttendance() {
        try {
            File file = new File(fileName);
            if (!file.exists()) {
                System.out.println("No attendance record found!");
                return;
            }

            BufferedReader br = new BufferedReader(new FileReader(file));
            String line;
            System.out.println("\n--- Attendance Report ---");
            while ((line = br.readLine()) != null) {
                System.out.println(line);
            }
            br.close();
        } catch (IOException e) {
            System.out.println("Error while reading the file.");
        }
    }
}
